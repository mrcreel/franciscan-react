{
  "name": "franciscan-university-react",
  "description": "The main website for Franciscan University of Steubenville. Built with React, NextJS, and MaterialUI.",
  "version": "1.0.0",
  "author": "Jesse Weigel <jesseweigel@gmail.com>",
  "now": {
    "alias": "dev.franciscan.university",
    "env": {
      "NODE_ENV": "production"
    },
    "scale": {
      "sfo1": {
        "min": 2,
        "max": "auto"
      }
    }
  },
  "dependencies": {
    "@material-ui/codemod": "^1.1.0",
    "@material-ui/core": "^1.4.2",
    "@material-ui/icons": "^2.0.0",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link-http": "^1.5.3",
    "classnames": "^2.2.5",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "isomorphic-unfetch": "^2.0.0",
    "lodash.debounce": "^4.0.8",
    "lodash.foreach": "^4.5.0",
    "lodash.mapvalues": "^4.6.0",
    "lodash.throttle": "^4.1.1",
    "lru-cache": "^4.1.2",
    "next": "6.1.1",
    "react": "^16.4.1",
    "react-apollo": "^2.1.0",
    "react-dom": "^16.4.1",
    "react-masonry-component": "^6.0.2",
    "react-scroll": "^1.7.9",
    "react-select": "^2.0.0",
    "react-swipeable-views": "^0.12.16",
    "uuid": "^3.3.2"
  },
  "keywords": [
    "next"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "dev": "./node_modules/.bin/nodemon --watch server.js server.js",
    "ci": "node server.js & ",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "deploy": "now && now alias",
    "format": "prettier --trailing-comma es5 --no-semi --single-quote --write \"src/**/*.js\"",
    "cm": "git-cz",
    "precommit": "lint-staged && npm run test",
    "unit": "jest .test.js --config=jest.config.json",
    "e2e": "mocha --timeout 30000 ./e2e/runner.js ./e2e/tests/*.spec.js",
    "test": "npm run unit && npm run e2e"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "7.2.0",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12",
    "prettier": "^1.9.2",
    "puppeteer": "^1.2.0",
    "raf": "^3.4.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --no-semi",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/shim.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
